<div class="ui vertical segment register">
    <div id="register-form" class="ui two column centered grid">
        <div class="ui large form segment column">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" id="fos_user_registration_form">

                <div class="two fields">
                    <div class="field">
                        <label for="fos_user_registration_form_username" class="required"> {{ 'form.username'|trans({}, 'FOSUserBundle') }} </label>
                        <div class="ui icon input">
                            <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="255" pattern=".{2,}"/>
                            <i class="blue user icon"></i>
                        </div>
                    </div>

                    <div class="field">
                        <label for="fos_user_registration_form_email" class="required">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="ui icon input">
                            <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required">
                            <i class="blue mail icon"></i>
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <label for="fos_user_registration_form_plainPassword_first" class="required">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="ui icon input">
                            <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required">
                            <i class="blue lock icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <label for="fos_user_registration_form_plainPassword_second" class="required">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="ui icon input">
                            <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required">
                            <i class="blue lock icon"></i>
                        </div>
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        {{ form_label(form.business_unit) }}
                        {{ form_widget(form.business_unit) }}
                        {{ form_errors(form.business_unit) }}
                    </div>
                    <div class="field">
                        {{ form_widget(form.avatarFile) }}
                        {{ form_row(form._token) }}
                    </div>
                </div>
                <!--
                <div class="two fields">
                    <div class="field">
                    </div>
                    <div class="field">
                    </div>
                </div> -->
                <div>
                    <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="ui submit button" style="float:right;"/>
                </div>
            </form>
        </div>
        <div class="register-robot-container">
            <div class="login-robot-body">
                <div id="login-robot-bubble" class="ui red stacked segment">
                    <h4>快到碗里来</h4>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'SundayUserBundle:Registration:registerAvatarModal.html.twig' %}

